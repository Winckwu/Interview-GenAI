# Interview-GenAI Backend Configuration for Mac
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=development
PORT=5001

# Database Configuration (Mac with wuqi user)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=interview_genai
DB_USER=wuqi
DB_PASSWORD=

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-this-must-be-long-and-random
JWT_EXPIRY=24h

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/account/api-keys
# IMPORTANT: Keep your API key SECRET - never share or commit it!
OPENAI_API_KEY=sk-proj-YOUR-ACTUAL-API-KEY-HERE
# Model options: gpt-4o, gpt-4-turbo, gpt-4o-mini (recommended), gpt-3.5-turbo
AI_MODEL=gpt-4o-mini

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Application
APP_NAME=Interview-GenAI-API
APP_VERSION=1.0.0
