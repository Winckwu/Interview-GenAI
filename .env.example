# ============================================================================
# Interview-GenAI Environment Configuration
# Copy this file to .env and update values as needed
# ============================================================================

# Node Environment
NODE_ENV=development

# Frontend Configuration
VITE_API_URL=http://localhost:5001/api
VITE_APP_NAME=Interview-GenAI

# Backend API
BACKEND_PORT=5001
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=interview_genai
DB_USER=postgres
DB_PASSWORD=postgres_secure_password_change_in_production

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-this-must-be-long-and-random
JWT_EXPIRY=24h

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/account/api-keys
# IMPORTANT: Keep your API key SECRET - never share or commit it!
OPENAI_API_KEY=sk-proj-your-api-key-here
# Model options: gpt-4o, gpt-4-turbo, gpt-4o-mini (recommended), gpt-3.5-turbo
AI_MODEL=gpt-4o-mini

# Logging
LOG_LEVEL=debug

# Application Metadata
APP_NAME=Interview-GenAI
APP_VERSION=1.0.0
APP_DESCRIPTION=Advanced ML System for AI Usage Pattern Recognition
